{
  "name": "productionapp",
  "version": "0.3.8",
  "private": true,
  "main": "dist/electron/main/index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:api": "cd apps/api && npx tsc",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:icons": "node scripts/generate-icons.js",
    "build:production": "npm run build:icons && npm run build && npm run build:api && npm run build:electron",
    "start": "next start",
    "lint": "eslint",
    "electron": "npm run build:api && npm run build:electron && electron .",
    "electron:dev": "npm run build:api && npm run build:electron && concurrently -k -n next,api-tsc,el-tsc,electron -c blue,yellow,cyan,green \"npm run dev\" \"cd apps/api && npx tsc --watch --preserveWatchOutput\" \"tsc -p electron/tsconfig.json --watch --preserveWatchOutput\" \"wait-on http://localhost:3000 && electronmon .\"",
    "electron:build": "npm run build:production && electron-builder",
    "electron:build:win": "npm run build:production && electron-builder --win",
    "postinstall": "npx prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.13",
    "@nestjs/core": "^11.1.13",
    "@nestjs/platform-express": "^11.1.13",
    "@prisma/adapter-better-sqlite3": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "better-sqlite3": "^12.6.2",
    "electron-updater": "^6.7.3",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.4",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "electronmon": "^2.0.4",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "prisma": "^7.3.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4",
    "to-ico": "^1.1.5",
    "typescript": "^5",
    "wait-on": "^9.0.3",
    "zod": "^4.3.6"
  }
}
